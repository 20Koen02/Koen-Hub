    <script type="text/javascript">
      $(document).ready(function() {
        $("#sidebarCollapse").on("click", function() {
          $("#sidebar").toggleClass("active");
        });
      });

      function createGraph(id) {
        var chartid = $(id);
        var chart = new Chart(chartid, {
          type: "line",
          data: {
            labels: [],
            datasets: [
              {
                label: "koen02.nl ping",
                data: [],
                backgroundColor: "rgba(50, 89, 168, 0.2)",
                borderColor: "rgba(50, 89, 168, 1)",
                borderWidth: 1,
                lineTension: 0
              },
              {
                label: "gideonbox.xyz ping",
                data: [],
                backgroundColor: "rgba(153, 50, 168, 0.2)",
                borderColor: "rgba(153, 50, 168, 1)",
                borderWidth: 1,
                lineTension: 0
              }
            ]
          },
          options: {
            scales: {
              yAxes: [
                {
                  ticks: {
                    callback: function(value, index, values) {
                      return value + "ms";
                    }
                  }
                }
              ],
              xAxes: [
                {
                  ticks: {
                    callback: function(t) {
                      var maxLabelLength = 5;
                      if (t.length > maxLabelLength)
                        return t.substr(0, maxLabelLength);
                      else return t;
                    }
                  }
                }
              ]
            },
            tooltips: {
              callbacks: {
                title: function(t, d) {
                  return d.labels[t[0].index];
                }
              },
              mode: "index",
              intersect: false
            },
            hover: {
              mode: "index",
              intersect: false
            },
            elements: {
              point: {
                radius: 0
              }
            },
            responsive: true,
            maintainAspectRatio: false
          }
        });

        chart.canvas.parentNode.style.height = "200px";
        return chart;
      }

      hourChart = createGraph("#hourChart");
      dummyData(hourChart, 144);

      function dummyData(chart, amt) {
        const interval = setInterval(function() {
          let date = new Date().toLocaleString().split("-");
          if (date[1].length < 2) {
            date[1] = "0" + date[1];
          }
          date = date.join("-").replace(/,/g, "");
          chart.data.labels.push(date);
          chart.data.datasets[0].data.push(
            Math.floor(Math.random() * (25 - 15 + 1) + 15)
          );
          chart.data.datasets[1].data.push(
            Math.floor(Math.random() * (25 - 15 + 1) + 15)
          );
          chart.update();
          if (chart.data.labels.length > amt) {
            clearInterval(interval);
          }
        }, 1);
      }
    </script>
